{
    "name": "adeptoas/fancy",
    "description": "Fancy Functions Collection",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Benjamin Schmidt",
            "email": "benjamin.schmidt@visma.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "ext-mbstring": "*",
		"ext-json": "*",
        "ext-imagick": "*",
		"ext-iconv": "*"
	},
    "autoload": {
        "psr-4": {
            "Adepto\\Fancy\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "suggest": {
        "ext-xml": "Required for some XML functionality",
        "ext-xmlwriter": "Required for some XML functionality"
    },
    "scripts": {
        "test": "php vendor/bin/phpunit -c phpunit.xml --colors=always"
    }
}
